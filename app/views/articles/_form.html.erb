<%= form_for(@article) do |f| %>
  <ul>
    <%= @article.errors.full_messages.each do |error| %>
      <li> <%= error %></li>
    <% end  %>
  </ul>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :tag_list %><br>
    <%= f.text_field :tag_list %>
  </>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to "CANCEL", articles_path %>
